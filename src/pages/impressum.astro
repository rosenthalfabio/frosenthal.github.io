---
import { siteConfig } from "../config";
import "../styles/global.css";
---

<html lang="de" class="scroll-smooth">
<head>
    <title>Impressum</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={siteConfig.description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
            href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700&display=swap"
            rel="stylesheet"
    />
</head>

<body
        class="relative isolate bg-white text-gray-800 text-left min-h-screen"
        style={`--accent-color: ${siteConfig.accentColor}`}
>
<!-- Gradient background -->
<div
        class="absolute inset-0 -z-10 pointer-events-none"
        style={`background: radial-gradient(
      ellipse 800px 1200px at 0% 0%,
      ${siteConfig.accentColor}40 0%,
      ${siteConfig.accentColor}25 20%,
      ${siteConfig.accentColor}10 40%,
      rgba(255, 255, 255, 0.3) 70%,
      rgba(255, 255, 255, 0.8) 90%,
      white 100%
    )`}
></div>

<!-- Subtle grid pattern -->
<svg
        aria-hidden="true"
        class="absolute inset-0 -z-10 w-full h-full stroke-gray-200 pointer-events-none [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
>
    <defs>
        <pattern
                id="impressum-grid"
                x="50%"
                y={-1}
                width={200}
                height={200}
                patternUnits="userSpaceOnUse"
        >
            <path d="M.5 200V.5H200" fill="none" />
        </pattern>
    </defs>
    <rect fill="url(#impressum-grid)" width="100%" height="100%" stroke-width={0} />
</svg>

<!-- Content -->
<main class="relative z-10 max-w-3xl mx-auto p-8 sm:p-12 min-h-screen">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-8">
        Impressum
    </h1>

    <section class="space-y-6 text-base sm:text-lg text-gray-700">
        <p>
            <span class="font-semibold" style={`color: ${siteConfig.accentColor}`}>Name:</span><br />
            Fabio Rosenthal
        </p>

        <p>
            <span class="font-semibold" style={`color: ${siteConfig.accentColor}`}>Academic context:</span><br />
            Data Analytics and Machine Learning<br />
            Technical University of Munich
        </p>

        <p>
            <span class="font-semibold" style={`color: ${siteConfig.accentColor}`}>Address:</span><br />
            Boltzmannstr. 3<br />
            85748 Garching<br />
            Germany
        </p>

        <p>
            <span class="font-semibold" style={`color: ${siteConfig.accentColor}`}>Contact:</span><br />
            <a
                    href="mailto:f.rosenthal@tum.de"
                    class="transition-colors"
            >
                f.rosenthal@tum.de
            </a>
        </p>

        <p>
            <span class="font-semibold" style={`color: ${siteConfig.accentColor}`}>Responsible for content according to ยง 18 Abs. 2 MStV:</span><br />
            Fabio Rosenthal
        </p>
    </section>


</main>
</body>
</html>
