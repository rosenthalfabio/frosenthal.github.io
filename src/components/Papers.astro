---
import { siteConfig } from "../config";
const papers = siteConfig.papers;
const hasPapers = papers && papers.length > 0;
---

{hasPapers && (
<section id="papers" class="p-8 sm:p-12 md:p-16 lg:p-24">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
            <div class="col-span-1 lg:col-span-4 sticky top-0 md:top-0 lg:top-32 bg-white z-10">
                <h2 class="text-2xl sm:text-3xl md:text-4xl xl:text-6xl font-bold text-gray-900">
                    Papers
                </h2>
                <div
                    class="w-[75px] h-[5px] mt-2 rounded-full sm:mt-2 mb-4 sm:mb-2"
                    style={`background-color: ${siteConfig.accentColor}`}
                />
            </div>

            {/* Right column: papers list */}
            <div class="lg:col-span-8 space-y-12">
                {papers.map((paper, index) => {
                    const pdfUrl =
                        paper.pdf ||
                        (paper.arxivId ? `https://arxiv.org/pdf/${paper.arxivId}.pdf` : "");

                    return (
                        <div key={index} class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
                            {/* Paper content */}
                            <div class="flex flex-col md:flex-row md:items-stretch md:justify-between gap-6">
                                <div class="flex-1">
                                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-1">
                                        {paper.title}
                                    </h3>
                                    <p class="text-gray-700 mb-1">
                                        {paper.conference}{paper.location ? ` @ ${paper.location}` : ""}
                                    </p>
                                    <p class="text-gray-500 mb-2">{paper.year}</p>

                                    {paper.authors && (
                                            <>
                                                <p class="text-gray-800 mb-1">
                                                    {paper.authors.map((author, idx) => (
                                                            <span class={`${author.highlight ? "font-bold text-blue-600" : ""}`}>
                                                                {author.name}{idx < paper.authors.length - 1 ? ", " : ""}
                                                            </span>
                                                    ))}
                                                </p>
                                                {paper.authors.some(a => a.name.includes("*")) && (
                                                <p class="text-gray-500 text-xs mt-0.5"> * indicates equal contribution</p>
                                                )}
                                            </>
                                    )}

                                    {paper.keywords && paper.keywords.length > 0 && (
                                            <>
                                                <p class="font-bold text-gray-900 mt-4 mb-1">Keywords:</p>
                                                <div class="flex flex-wrap gap-1.5 sm:gap-2 pb-2">
                                                    {paper.keywords.slice().sort((a, b) => a.localeCompare(b)).map((keyword, idx) => (
                                                                <span key={idx} class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium">
                                                                  {keyword}
                                                                </span>
                                                    ))}
                                                </div>
                                            </>
                                    )}
                                </div>

                                {/* Right column: preview */}
                                <div class="md:w-1/3 flex justify-center md:justify-end mt-4 md:mt-0">
                                    {pdfUrl ? (
                                            <div class="w-full h-[15vh] md:h-[25vh] overflow-auto">
                                                <iframe
                                                        src={pdfUrl}
                                                        class="w-full h-full rounded border border-gray-200 shadow-sm"
                                                        style="min-height: 600px;"
                                                />
                                            </div>


                                    ) : (
                                            <div class="text-sm text-gray-500 italic text-center">PDF not available</div>
                                    )}
                                </div>
                            </div>

                            {/* Abstract */}
                            {paper.description && (
                                <div class="mt-6">
                                    <p class="font-bold text-gray-900 mb-1">Abstract:</p>
                                    <p class="text-gray-700 mt-2 text-justify">{paper.description}</p>

                                    {/* Buttons */}
                                    <div class="flex flex-wrap gap-2 mt-4 mb-2">
                                        {paper.projectLink && (
                                                <a
                                                        href={paper.projectLink}
                                                        target="_blank"
                                                        class="px-3 py-1.5 rounded-md sm:rounded-lg text-white text-xs sm:text-sm font-medium transition-all duration-300"
                                                        style={`background-color: ${siteConfig.accentColor}`}
                                                >
                                                    Project Page
                                                </a>
                                        )}
                                        {pdfUrl && (
                                                <a
                                                        href={pdfUrl}
                                                        target="_blank"
                                                        class="px-3 py-1.5 rounded-md sm:rounded-lg text-white text-xs sm:text-sm font-medium transition-all duration-300"
                                                        style={`background-color: ${siteConfig.accentColor}`}
                                                >
                                                    View Paper
                                                </a>
                                        )}
                                    </div>

                                    {/* BibTeX */}
                                    {paper.bibtex && (
                                        <details class="mt-4 rounded-lg" style={`border: 1px solid ${siteConfig.accentColor}`}>
                                            <summary class="cursor-pointer px-4 py-2 font-medium text-sm select-none">
                                                ðŸ“– Show BibTeX
                                            </summary>
                                            <div class="relative bg-white border-t border-gray-200 rounded-b-lg">
                                                <button
                                                        class="absolute top-2 right-2
                                                         text-[11px] sm:text-xs
                                                         px-2 py-0.5
                                                         rounded-md
                                                         border
                                                         cursor-pointer
                                                         select-none
                                                         transition-colors duration-200"
                                                        style={`border-color: ${siteConfig.accentColor}; color: ${siteConfig.accentColor}`}
                                                        data-copy
                                                >
                                                    Copy
                                                </button>

                                                <pre class="px-4 py-3 overflow-x-auto text-xs sm:text-sm text-gray-800 font-mono m-0 text-left whitespace-pre">
                                                    <code>
                                                        {paper.bibtex.replace(/^\s+|\s+$/g, "").split("\n").map((line) => {
                                                            const trimmed = line.trim();
                                                            if (trimmed.includes("=")) {
                                                                return "  " + trimmed;
                                                            }
                                                            return trimmed;
                                                        }).join("\n")}
                                                    </code>
                                                </pre>
                                            </div>
                                        </details>
                                    )}
                                </div>
                            )}
                        </div>
                    );
                })}
            </div>
        </div>
</section>)}

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const detailsElements = document.querySelectorAll("#papers details");
        detailsElements.forEach((details) => {
            details.addEventListener("toggle", () => {
                if (details.open) {
                    detailsElements.forEach((other) => {
                        if (other !== details) other.removeAttribute("open");
                    });
                }
            });
        });

        document.querySelectorAll("[data-copy]").forEach((btn) => {
            btn.addEventListener("click", async () => {
                const code = btn.parentElement.querySelector("code");
                if (!code) return;

                await navigator.clipboard.writeText(code.innerText);

                const oldText = btn.innerText;

                const oldBg = btn.style.backgroundColor;
                const oldColor = btn.style.color;
                const oldBorderColor = btn.style.borderColor;

                btn.innerText = "Copied âœ“";
                btn.style.backgroundColor = "var(--accent-color)";
                btn.style.color = "#ffffff";
                btn.style.borderColor = "var(--accent-color)";

                setTimeout(() => {
                    btn.innerText = oldText;
                    btn.style.backgroundColor = oldBg;
                    btn.style.color = oldColor;
                    btn.style.borderColor = oldBorderColor;
                }, 1500);
            });
        });
    });
</script>
